// Write the program that displays the following form :
// [I know i could have used /* COMMENT */ but I wanted to keep the comment more readable since it involve many *.]

// *
// ***
// *****
// *******
// *****
// ***
// *

#include <iostream>

using namespace std;

int main()
{

    cout << "*\n";
    cout << "***\n";
    cout << "*****\n";
    cout << "*******\n";
    cout << "*****\n";
    cout << "***\n";
    cout << "*\n";

    system("pause");

    return 0;
}
